<Page x:Class="Aptechka.Pages.View.ViewRequest"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Aptechka.Pages.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ViewRequest">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="23*"/>
            <RowDefinition Height="22*"/>
        </Grid.RowDefinitions>
        <StackPanel
            Background="#E7F0FB" Width="170" Margin="0,25,0,0" Grid.RowSpan="2" HorizontalAlignment="Left" VerticalAlignment="Top" Height="400"
            >
            <Button 
                    Background="#81A5C5"  
                    Content="Закупки" x:Name="BtnSpecialty" 
                    Click="BtnSpecialty_Click"
                    Width="150" Height="28"/>

        </StackPanel>
        <DataGrid 
            Background="#E7F0FB"
            AutoGenerateColumns="True"
            IsReadOnly="True"
            Name="GridListRequest" Height="400" Margin="225,25,70,0" Grid.RowSpan="2" VerticalAlignment="Top"/>
    </Grid>
</Page>
